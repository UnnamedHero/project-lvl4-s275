extends /layouts/application.pug

block content
  +formFor(f, { url: urlFor('changeUserPassword'), method: 'patch' })
    +input(f, 'password', { as: 'password', required: true })
    +input(f, 'newPassword', { as: 'password', required: true })
    +input(f, 'confirmPassword', { as: 'password', required: true })
    +button(f, 'Change Password')
