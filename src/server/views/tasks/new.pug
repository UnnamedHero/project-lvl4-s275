extends /layouts/tasks.pug

block tasks
  h4 Add new tasks
  +formFor(f, { url: urlFor('publishTask'), method: 'post' })
    +input(f, 'name', { required: true })
    +input(f, 'description')
    +select(f, 'taskStatusId', { required: true, items: taskStatuses })
    +select(f, 'assignedToId', { items: assignedTo })
    +input(f, 'tags', { required: true })
    +button(f, 'Add')