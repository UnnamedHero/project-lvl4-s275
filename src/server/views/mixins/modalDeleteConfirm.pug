mixin modalWindow(modalId, deleteUrl, bodyEntity = '', title = 'Warning')
  .modal.fade(id= `${modalId}` role='dialog' aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5.modal-title= `${title}`
        .modal-body
          p= `Are you sure you want to delete ${bodyEntity}?`
        .modal-footer          
          a.btn.btn-danger(href=`${deleteUrl}` role='button' data-method='delete' rel='nofollow') Delete
          a.btn.btn-secondary(href='#' data-dismiss='modal') Cancel

mixin modalButton(targetId, buttonText = 'Delete')
  button.btn.btn-danger.btn-sm(type='button' data-toggle='modal' data-target=`#${targetId}` )= `${buttonText}`